{
    "compilerOptions": {
      "target": "es5",                     // Elige la versión de ECMAScript a la que compilar (ES5 para compatibilidad).
      "module": "es6",                     // Tipo de módulo (ES6 para usar import/export).
      "strict": true,                      // Habilita todas las comprobaciones estrictas de TypeScript.
      "esModuleInterop": true,             // Habilita la interoperabilidad con módulos ES.
      "forceConsistentCasingInFileNames": true, // Fuerza consistencia en el uso de mayúsculas en los nombres de archivos.
      "outDir": "./dist",                  // Directorio de salida para los archivos JavaScript compilados.
      "rootDir": "./",                     // Directorio raíz de los archivos TypeScript.
      "sourceMap": true                    // Genera archivos de mapa de fuente para depuración.
    },
    "include": [
      "./**/*.ts"                          // Incluye todos los archivos .ts en el proyecto.
    ],
    "exclude": [
      "node_modules"                       // Excluye la carpeta node_modules.
    ]
  }
  